{
  "version": 8,
  "name": "UK Routing Demo",
  "metadata": {},
  "glyphs": "__R2_BASE_URL__/glyphs/{fontstack}/{range}.pbf",
  "sprite": "__R2_BASE_URL__/sprites/sprite",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "pmtiles://__R2_BASE_URL__/uk.pmtiles",
      "attribution": "Â© <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap contributors</a>"
    },
    "terrain-rgb": {
      "type": "raster-dem",
      "url": "pmtiles://__R2_BASE_URL__/uk-terrain.pmtiles",
      "tileSize": 512,
      "encoding": "mapbox"
    }
  },
  "terrain": {
    "source": "terrain-rgb",
    "exaggeration": 1.5
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#f8f4f0" }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": { "fill-color": "#a0c8f0" }
    },
    {
      "id": "landuse-residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": { "fill-color": "#ede8e3", "fill-opacity": 0.7 }
    },
    {
      "id": "landuse-park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "park", "grass", "wood", "forest"],
      "paint": { "fill-color": "#d4e8c2", "fill-opacity": 0.8 }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "motorway"],
      "paint": { "line-color": "#f9a825", "line-width": ["interpolate", ["linear"], ["zoom"], 5, 1, 12, 6] }
    },
    {
      "id": "road-trunk",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "trunk"],
      "paint": { "line-color": "#f0d060", "line-width": ["interpolate", ["linear"], ["zoom"], 6, 0.5, 12, 4] }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "primary"],
      "paint": { "line-color": "#e0c0a0", "line-width": ["interpolate", ["linear"], ["zoom"], 7, 0.5, 12, 3] }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "secondary", "tertiary"],
      "minzoom": 9,
      "paint": { "line-color": "#ddd", "line-width": 1.5 }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service", "track"],
      "minzoom": 13,
      "paint": { "line-color": "#eee", "line-width": 1 }
    },
    {
      "id": "boundary-country",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 2],
      "paint": { "line-color": "#aaa", "line-width": 1.5, "line-dasharray": [4, 2] }
    },
    {
      "id": "place-city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["in", "class", "city", "town"],
      "minzoom": 6,
      "layout": {
        "text-field": "{name:en}",
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 6, 10, 12, 14],
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "#fff",
        "text-halo-width": 1.5
      }
    }
  ]
}
